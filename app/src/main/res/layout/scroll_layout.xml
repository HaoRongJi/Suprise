<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F1F1F7"
    android:layout_width="match_parent" android:layout_height="140dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/linear_shape"
        android:layout_height="match_parent">

        <HorizontalScrollView
            android:id="@+id/hroizontal_sv"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="120dp">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/home_seckill"
                android:layout_width="match_parent"
                android:layout_height="120dp"></android.support.v7.widget.RecyclerView>
        </HorizontalScrollView>


    </LinearLayout>


</RelativeLayout>