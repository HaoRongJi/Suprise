<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:background="#F1F1F7"
android:layout_width="match_parent" android:layout_height="45dp">


<LinearLayout
    android:id="@+id/linear_1"
    android:layout_width="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/linear_shape"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_miaosha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical"
        android:text="京东秒杀"
        android:textColor="#f00" />

    <TextView
        android:id="@+id/tv_miaosha_time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:gravity="center_vertical"
        android:text="10点场" />

    <TextView
        android:id="@+id/tv_miaosha_shi"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/home_miaosha_bag_shape"
        android:gravity="center"
        android:text="1"
        android:layout_gravity="center_vertical"
        android:textColor="#fff"
        android:textSize="10sp" />

    <TextView
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"


        android:text=":" />

    <TextView
        android:layout_gravity="center_vertical"
        android:id="@+id/tv_miaosha_minter"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/home_miaosha_bag_shape"
        android:gravity="center"
        android:text="1"
        android:textColor="#fff"
        android:textSize="10sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"

        android:text=":" />

    <TextView
        android:layout_gravity="center_vertical"
        android:id="@+id/tv_miaosha_second"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/home_miaosha_bag_shape"
        android:gravity="center"
        android:text="1"
        android:textColor="#fff"
        android:textSize="10sp" />




</LinearLayout>



</RelativeLayout>